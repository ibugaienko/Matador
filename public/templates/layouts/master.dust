<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="A node-based web interface for the Bull Job Manager">
    <meta name="author" content="Shane King">
    <title>{+title /}</title>

    <link href="{basepath}/css/bootstrap.min.css" rel="stylesheet">
    <link href="{basepath}/css/bootstrap-theme.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{basepath}/css/master.css"/>
    <link href="{basepath}/css/font-awesome.css" rel="stylesheet">
    <link rel="shortcut icon" href="{basepath}/img/favicon.ico" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="{basepath}/js/jquery-2.1.0.min.js"></script>
    <script src="{basepath}/js/knockout.min.js"></script>
    <script src="{basepath}/js/moment.min.js"></script>
    <script src="{basepath}/js/jquery.blockUI.js"></script>
    <script src="{basepath}/js/jquery.noty.packaged.min.js"></script>
    <script src="{basepath}/js/bootstrap.min.js"></script>
    <script src="{basepath}/js/DataModel.js"></script>
    <script src="{basepath}/js/RedisHandler.js"></script>
    <script src="{basepath}/js/lodash.min.js"></script>
    <script>
    window.basepath = '{basepath}';
    </script>
</head>

<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Matador{?selectedQueue}: {selectedQueue}{/selectedQueue}</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                {?selectedQueue}
                {:else}
                <li style="padding-left: 5%; padding-right: 5%; padding-bottom: 2px;"><select class="form-control" data-bind="value: selectedQueue, options: queueNames"></select></li>
                {/selectedQueue}
                <li {?overview}class="active"{/overview}><a href="{basepath}/">{?selectedQueue}Back to Overview{:else}Overview{/selectedQueue}<span data-bind="visible: stuck() != null && stuck() !== ' (0)', text: stuck" style="color: red"></span></a></li>
                <li {?complete}class="active"{/complete} data-bind="visible: selectedQueue()"><a href="{basepath}/complete">Complete<span data-bind="visible: complete() != null, text: complete"></span></a></li>
                <li {?failed}class="active"{/failed} data-bind="visible: selectedQueue()"><a href="{basepath}/failed">Failed<span data-bind="visible: failed() != null, text: failed"></span></a></li>
                <li {?active}class="active"{/active} data-bind="visible: selectedQueue()"><a href="{basepath}/active">Active<span data-bind="visible: active() != null, text: active"></span></a></li>
                <li {?pending}class="active"{/pending} data-bind="visible: selectedQueue()"><a href="{basepath}/pending">Pending<span data-bind="visible: pending() != null, text: pending"></span></a></li>
                <li {?delayed}class="active"{/delayed} data-bind="visible: selectedQueue()"><a href="{basepath}/delayed">Delayed<span data-bind="visible: delayed() != null, text: delayed"></span></a></li>
                <li {?newjob}class="active"{/newjob} data-bind="visible: selectedQueue()"><a href="{basepath}/newjob" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/newjob'}">New Job</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li><h3>Matador</h3></li>
                {?selectedQueue}
                {:else}
                <li style="padding-left: 20px; padding-right: 20px; padding-bottom: 12px;"><select class="form-control" data-bind="value: selectedQueue, options: queueNames"></select></li>
                {/selectedQueue}
                <li {?overview}class="active"{/overview}><a href="{basepath}/">{?selectedQueue}Back to Overview{:else}Overview{/selectedQueue}<span data-bind="visible: stuck() != null && stuck() !== ' (0)', text: stuck" style="color: red"></span></a></li>
                <li {?complete}class="active"{/complete} data-bind="visible: selectedQueue()"><a href="{basepath}/complete" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/complete'}">Complete<span data-bind="visible: complete() != null, text: complete"></span></a></li>
                <li {?failed}class="active"{/failed} data-bind="visible: selectedQueue()"><a href="{basepath}/failed" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/failed'}">Failed<span data-bind="visible: failed() != null, text: failed"></span></a></li>
                <li {?active}class="active"{/active} data-bind="visible: selectedQueue()"><a href="{basepath}/active" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/active'}">Active<span data-bind="visible: active() != null, text: active"></span></a></li>
                <li {?pending}class="active"{/pending} data-bind="visible: selectedQueue()"><a href="{basepath}/pending" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/pending'}">Pending<span data-bind="visible: pending() != null, text: pending"></span></a></li>
                <li {?delayed}class="active"{/delayed} data-bind="visible: selectedQueue()"><a href="{basepath}/delayed" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/delayed'}">Delayed<span data-bind="visible: delayed() != null, text: delayed"></span></a></li>
                <li {?newjob}class="active"{/newjob} data-bind="visible: selectedQueue()"><a href="{basepath}/newjob" data-bind="attr: {href: basepath + '/' + selectedQueue() + '/newjob'}">New Job</a></li>
            </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        {+body /}
        </div>
    </div>
</div>

<script type="text/javascript">
    var keys = [];
    var queueNames = [];
    {#keys}
    keys.push({id: "{id}", type: "{type}", status: "{status}"{?progress}, progress: "{progress}"{/progress}{?delayUntil}, delayUntil: "{delayUntil}"{/delayUntil}});
    {/keys}

    {#queues}
    queueNames.push("{.name}");
    {/queues}

    $(document).on('ready', function(){
        {?counts}
        /*If counts doesn't exist we're on an error page*/
        ko.applyBindings(dataModel);
        dataModel.fn.refreshViewModel({
            basepath: '{basepath}'
        });
        dataModel.queueNames(queueNames);
        {?selectedQueue}dataModel.selectedQueue("{selectedQueue}");{/selectedQueue}
        {/counts}
    });
</script>

</body>
</html>
